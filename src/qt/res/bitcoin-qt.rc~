            VALUE "OriginalFilename",   "Alexander III Magnus-qt.exe"
            VALUE "ProductName",        "Alexander III Magnus-Qt"
            VALUE "ProductVersion",     VER_PRODUCTVERSION_STR
        END
    END

    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0, 1252 // language neutral - multilingual (decimal)
